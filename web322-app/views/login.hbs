
<h2>Login In</h2>

<form action="/login" method="POST">

<div class="col-md-4">
    <label for="validationDefault02" class="form-label">User name</label>
    <input type="text" class="form-control" id="validationDefault02" name="userName" placeholder="Username" value="{{userName}}" required>
  </div>
   <br>
    <div class="col-md-4">
    <label for="validationDefault02" class="form-label">Password</label>
    <input type="password" class="form-control" id="validationDefault02" name="password" placeholder="Password"  required>
  </div>
    <br>
     <button class="btn btn-primary" type="submit">Log in</button>
    
</form>

{{#if errorMessage}}
    <div class="error">{{errorMessage}}</div>
{{/if}}
